        <TextBox x:Name="tbTeacherLastName" HorizontalAlignment="Left" Margin="608,118,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblTeacher" Content="Professeur" HorizontalAlignment="Left" Margin="335,114,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
